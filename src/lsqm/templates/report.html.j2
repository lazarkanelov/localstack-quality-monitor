<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LocalStack Quality Report - {{ run_date }}</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            background: #0f172a;
            color: #e2e8f0;
            line-height: 1.5;
            min-height: 100vh;
        }

        a { color: #60a5fa; text-decoration: none; }
        a:hover { text-decoration: underline; }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Header */
        header {
            background: #1e293b;
            border-bottom: 1px solid #334155;
            padding: 20px 0;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 10px;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #3b82f6, #8b5cf6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .run-info {
            font-size: 0.875rem;
            color: #94a3b8;
        }

        .run-info code {
            background: #334155;
            padding: 2px 8px;
            border-radius: 4px;
            font-size: 0.75rem;
        }

        /* Navigation */
        nav {
            display: flex;
            gap: 8px;
            margin-top: 16px;
            border-bottom: 1px solid #334155;
            padding-bottom: 0;
        }

        .nav-btn {
            padding: 10px 16px;
            background: none;
            border: none;
            color: #94a3b8;
            cursor: pointer;
            font-size: 0.875rem;
            border-bottom: 2px solid transparent;
            margin-bottom: -1px;
            transition: color 0.2s;
        }

        .nav-btn:hover { color: #e2e8f0; }
        .nav-btn.active {
            color: #3b82f6;
            border-bottom-color: #3b82f6;
        }

        /* Main content */
        main {
            padding: 24px 0;
        }

        /* Tabs */
        .tab-panel { display: none; }
        .tab-panel.active { display: block; }

        /* Cards */
        .card {
            background: #1e293b;
            border: 1px solid #334155;
            border-radius: 12px;
            margin-bottom: 16px;
            overflow: hidden;
        }

        .card-header {
            padding: 16px 20px;
            border-bottom: 1px solid #334155;
        }

        .card-body { padding: 20px; }

        .card-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: #f1f5f9;
        }

        /* Stats grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 16px;
            margin-bottom: 24px;
        }

        .stat-card {
            background: #1e293b;
            border: 1px solid #334155;
            border-radius: 12px;
            padding: 20px;
            text-align: center;
        }

        .stat-value {
            font-size: 2.5rem;
            font-weight: 700;
        }

        .stat-label {
            font-size: 0.875rem;
            color: #94a3b8;
            margin-top: 4px;
        }

        .stat-green { color: #4ade80; border-color: rgba(74, 222, 128, 0.3); }
        .stat-yellow { color: #facc15; border-color: rgba(250, 204, 21, 0.3); }
        .stat-red { color: #f87171; border-color: rgba(248, 113, 113, 0.3); }
        .stat-blue { color: #60a5fa; border-color: rgba(96, 165, 250, 0.3); }

        /* Status badges */
        .badge {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .badge-passed { background: #166534; color: #4ade80; }
        .badge-failed { background: #991b1b; color: #fca5a5; }
        .badge-partial { background: #854d0e; color: #fde047; }
        .badge-timeout { background: #5b21b6; color: #c4b5fd; }
        .badge-error { background: #374151; color: #9ca3af; }

        /* Results list */
        .result-item {
            border: 1px solid #334155;
            border-radius: 8px;
            margin-bottom: 12px;
            overflow: hidden;
        }

        .result-header {
            padding: 16px;
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 16px;
            cursor: pointer;
            background: #1e293b;
        }

        .result-header:hover { background: #263548; }

        .result-name {
            font-weight: 600;
            color: #f1f5f9;
            word-break: break-word;
        }

        .result-meta {
            font-size: 0.75rem;
            color: #64748b;
            margin-top: 4px;
        }

        .result-services {
            display: flex;
            flex-wrap: wrap;
            gap: 4px;
            margin-top: 8px;
        }

        .service-tag {
            background: #334155;
            color: #cbd5e1;
            padding: 2px 8px;
            border-radius: 4px;
            font-size: 0.75rem;
        }

        .result-details {
            display: none;
            padding: 16px;
            background: #0f172a;
            border-top: 1px solid #334155;
        }

        .result-item.open .result-details { display: block; }

        /* Code blocks */
        pre {
            background: #0f172a;
            border: 1px solid #334155;
            border-radius: 8px;
            padding: 16px;
            overflow-x: auto;
            font-family: "SF Mono", Monaco, Consolas, monospace;
            font-size: 0.8125rem;
            line-height: 1.6;
            white-space: pre-wrap;
            word-wrap: break-word;
            max-height: 300px;
            overflow-y: auto;
        }

        code {
            font-family: "SF Mono", Monaco, Consolas, monospace;
            font-size: 0.8125rem;
        }

        /* Section titles */
        .section-title {
            font-size: 0.875rem;
            font-weight: 600;
            color: #94a3b8;
            margin: 16px 0 8px;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .section-title:first-child { margin-top: 0; }

        /* Error highlight */
        .error-box {
            background: rgba(220, 38, 38, 0.1);
            border: 1px solid rgba(248, 113, 113, 0.3);
            border-left: 4px solid #ef4444;
            border-radius: 8px;
            padding: 16px;
            margin-bottom: 16px;
        }

        .error-box code {
            color: #fca5a5;
            word-break: break-word;
        }

        /* Table */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px 16px;
            text-align: left;
            border-bottom: 1px solid #334155;
        }

        th {
            background: #1e293b;
            font-size: 0.75rem;
            font-weight: 600;
            color: #94a3b8;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        td { color: #e2e8f0; }

        tr:hover td { background: rgba(51, 65, 85, 0.3); }

        /* Progress bar */
        .progress-bar {
            height: 8px;
            background: #334155;
            border-radius: 4px;
            overflow: hidden;
            min-width: 100px;
        }

        .progress-fill {
            height: 100%;
            border-radius: 4px;
            transition: width 0.3s;
        }

        .progress-green { background: #22c55e; }
        .progress-yellow { background: #eab308; }
        .progress-red { background: #ef4444; }

        /* Filter buttons */
        .filter-group {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-bottom: 20px;
        }

        .filter-btn {
            padding: 8px 16px;
            background: #334155;
            border: none;
            border-radius: 8px;
            color: #e2e8f0;
            cursor: pointer;
            font-size: 0.875rem;
            transition: background 0.2s;
        }

        .filter-btn:hover { background: #475569; }
        .filter-btn.active { background: #3b82f6; }

        /* Footer */
        footer {
            background: #1e293b;
            border-top: 1px solid #334155;
            padding: 20px 0;
            margin-top: 40px;
            text-align: center;
            font-size: 0.875rem;
            color: #64748b;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .stats-grid { grid-template-columns: repeat(2, 1fr); }
            .stat-value { font-size: 1.75rem; }
            .result-header { flex-direction: column; }
        }

        /* Utility */
        .text-green { color: #4ade80; }
        .text-red { color: #f87171; }
        .text-yellow { color: #facc15; }
        .text-muted { color: #64748b; }
        .mt-2 { margin-top: 8px; }
        .mt-4 { margin-top: 16px; }
        .mb-4 { margin-bottom: 16px; }
        .flex { display: flex; }
        .items-center { align-items: center; }
        .justify-between { justify-content: space-between; }
        .gap-2 { gap: 8px; }
        .gap-4 { gap: 16px; }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <div class="header-content">
                <div>
                    <div class="logo">LocalStack Quality Report</div>
                    <div class="run-info">
                        Run <code>{{ run_id[:12] }}</code> &bull; {{ run_date }} &bull; LocalStack {{ localstack_version }}
                    </div>
                </div>
            </div>
            <nav>
                <button class="nav-btn active" onclick="showTab('overview')">Overview</button>
                <button class="nav-btn" onclick="showTab('results')">Test Results</button>
                <button class="nav-btn" onclick="showTab('services')">Services</button>
            </nav>
        </div>
    </header>

    <main class="container">
        <!-- Overview Tab -->
        <div id="overview" class="tab-panel active">
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-value">{{ total }}</div>
                    <div class="stat-label">Architectures</div>
                </div>
                <div class="stat-card stat-green">
                    <div class="stat-value">{{ passed }}</div>
                    <div class="stat-label">Passed</div>
                </div>
                <div class="stat-card stat-yellow">
                    <div class="stat-value">{{ partial }}</div>
                    <div class="stat-label">Partial</div>
                </div>
                <div class="stat-card stat-red">
                    <div class="stat-value">{{ failed + timeout + error }}</div>
                    <div class="stat-label">Failed</div>
                </div>
                <div class="stat-card stat-blue">
                    <div class="stat-value">{{ "%.0f"|format(pass_rate) }}%</div>
                    <div class="stat-label">Pass Rate</div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <div class="card-title">Recent Results</div>
                </div>
                <div class="card-body" style="padding: 0;">
                    <table>
                        <thead>
                            <tr>
                                <th>Architecture</th>
                                <th>Status</th>
                                <th>Services</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for result in results %}
                            <tr>
                                <td>
                                    <div class="result-name">{{ result.name }}</div>
                                    <div class="text-muted" style="font-size: 0.75rem;">{{ result.hash[:12] }}</div>
                                </td>
                                <td><span class="badge badge-{{ result.status|lower }}">{{ result.status }}</span></td>
                                <td>
                                    <div class="result-services">
                                        {% for svc in result.services[:4] %}
                                        <span class="service-tag">{{ svc }}</span>
                                        {% endfor %}
                                        {% if result.services|length > 4 %}
                                        <span class="service-tag">+{{ result.services|length - 4 }}</span>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Results Tab -->
        <div id="results" class="tab-panel">
            <div class="filter-group">
                <button class="filter-btn active" onclick="filterResults('all')">All ({{ total }})</button>
                <button class="filter-btn" onclick="filterResults('passed')">Passed ({{ passed }})</button>
                <button class="filter-btn" onclick="filterResults('failed')">Failed ({{ failed + timeout + error }})</button>
            </div>

            {% for result in results %}
            <div class="result-item" data-status="{{ result.status|lower }}">
                <div class="result-header" onclick="toggleResult(this)">
                    <div style="flex: 1; min-width: 0;">
                        <div class="flex items-center gap-2">
                            <span class="badge badge-{{ result.status|lower }}">{{ result.status }}</span>
                            <span class="result-name">{{ result.name }}</span>
                        </div>
                        <div class="result-meta">
                            {{ result.hash[:16] }} &bull; {{ "%.1f"|format(result.duration) }}s
                            {% if result.source_url %}
                            &bull; <a href="{{ result.source_url }}" target="_blank" onclick="event.stopPropagation()">Source</a>
                            {% endif %}
                        </div>
                        <div class="result-services">
                            {% for svc in result.services %}
                            <span class="service-tag">{{ svc }}</span>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="text-muted" style="font-size: 0.75rem;">Click to expand</div>
                </div>
                <div class="result-details">
                    {% if result.status == 'FAILED' and result.terraform_output %}
                    <div class="error-box">
                        <div class="section-title" style="margin-top: 0; color: #fca5a5;">Error Details</div>
                        <pre><code>{{ result.terraform_output }}</code></pre>
                    </div>
                    {% endif %}

                    {% if result.pytest_output %}
                    <div class="section-title">Test Output</div>
                    <pre><code>{{ result.pytest_output }}</code></pre>
                    {% endif %}

                    {% if result.logs %}
                    <div class="section-title">Container Logs</div>
                    <pre><code>{{ result.logs }}</code></pre>
                    {% endif %}

                    {% if result.terraform_files %}
                    <div class="section-title">Terraform Files</div>
                    {% for filename, content in result.terraform_files.items() %}
                    <details style="margin-bottom: 8px;">
                        <summary style="cursor: pointer; padding: 8px; background: #1e293b; border-radius: 4px;">{{ filename }}</summary>
                        <pre style="margin-top: 8px;"><code>{{ content }}</code></pre>
                    </details>
                    {% endfor %}
                    {% endif %}

                    {% if result.app_files %}
                    <div class="section-title">Application Files</div>
                    {% for filename, content in result.app_files.items() %}
                    <details style="margin-bottom: 8px;">
                        <summary style="cursor: pointer; padding: 8px; background: #1e293b; border-radius: 4px;">{{ filename }}</summary>
                        <pre style="margin-top: 8px;"><code>{{ content }}</code></pre>
                    </details>
                    {% endfor %}
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>

        <!-- Services Tab -->
        <div id="services" class="tab-panel">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Service Compatibility</div>
                </div>
                <div class="card-body" style="padding: 0;">
                    <table>
                        <thead>
                            <tr>
                                <th>Service</th>
                                <th>Pass Rate</th>
                                <th style="text-align: center;">Passed</th>
                                <th style="text-align: center;">Failed</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for svc in service_stats %}
                            <tr>
                                <td><strong>{{ svc.name }}</strong></td>
                                <td>
                                    <div class="flex items-center gap-2">
                                        <div class="progress-bar">
                                            <div class="progress-fill {% if svc.pass_rate >= 80 %}progress-green{% elif svc.pass_rate >= 50 %}progress-yellow{% else %}progress-red{% endif %}"
                                                 style="width: {{ svc.pass_rate }}%;"></div>
                                        </div>
                                        <span class="{% if svc.pass_rate >= 80 %}text-green{% elif svc.pass_rate >= 50 %}text-yellow{% else %}text-red{% endif %}">
                                            {{ "%.0f"|format(svc.pass_rate) }}%
                                        </span>
                                    </div>
                                </td>
                                <td style="text-align: center;" class="text-green">{{ svc.passed }}</td>
                                <td style="text-align: center;" class="text-red">{{ svc.failed }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

    <footer>
        <div class="container">
            LocalStack Quality Monitor &bull; <a href="https://localstack.cloud">localstack.cloud</a>
        </div>
    </footer>

    <script>
        function showTab(tabId) {
            // Hide all tabs
            document.querySelectorAll('.tab-panel').forEach(function(el) {
                el.classList.remove('active');
            });
            // Deactivate all nav buttons
            document.querySelectorAll('.nav-btn').forEach(function(el) {
                el.classList.remove('active');
            });
            // Show selected tab
            document.getElementById(tabId).classList.add('active');
            // Activate clicked button
            event.target.classList.add('active');
        }

        function toggleResult(header) {
            var item = header.parentElement;
            item.classList.toggle('open');
        }

        function filterResults(status) {
            // Update active button
            document.querySelectorAll('.filter-btn').forEach(function(el) {
                el.classList.remove('active');
            });
            event.target.classList.add('active');

            // Filter results
            document.querySelectorAll('.result-item').forEach(function(item) {
                var itemStatus = item.getAttribute('data-status');
                if (status === 'all') {
                    item.style.display = 'block';
                } else if (status === 'passed' && itemStatus === 'passed') {
                    item.style.display = 'block';
                } else if (status === 'failed' && (itemStatus === 'failed' || itemStatus === 'timeout' || itemStatus === 'error')) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }
    </script>
</body>
</html>
